<%-layout("layouts/boilerplate") %>
 <div class="position-relative d-flex align-items-center" style="width:70%; margin-top: 1rem; margin-bottom: 2rem;">
    <button class="btn btn-light position-absolute start-0 z-3 shadow" onclick="scrollLeft()"> <i class="fas fa-arrow-left"></i></button>

    <div id="slider" class="category-slider" style="overflow-x: hidden;">
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-landmark" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Historical homes</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-umbrella-beach" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Islands</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-mountain" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Top of the world</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-home" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Tiny homes</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-campground" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">A-frames</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-tree" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Treehouses</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-utensils" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Luxe</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-rocket" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">OMG!</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-hotel" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Mansions</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-coffee" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Bed & breakfast</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-house-user" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Earth homes</span>
      </div>
      <div class="category-item me-2">
        <span class="fs-3"><i class="fas fa-city" style="color: #676161; font-size: 1.1rem;"></i></span>
        <span class="text-muted small">Top cities</span>
      </div>
    </div>

    <button class="btn btn-light position-absolute end-0 z-3 shadow" onclick="scrollRight()"><i class="fas fa-arrow-right"></i></button>
  </div>

<%- include("../includes/flash") %>
<div class="row mt-4 mb-4">
  <%for(listing of listings){%>
  <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
    <a href="/listings/<%=listing._id%>">
      <div class="card" style="width: 100%">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="listing image"
          style="object-fit: cover; height: 200px"
        />
        <div class="card-body">
          <p class="card-text">
            <%=listing.title%> <br />
            &#8377;<%=listing.price.toLocaleString("en-IN")%> / night
          </p>
        </div>
      </div>
    </a>
  </div>
  <%}%>
</div>
